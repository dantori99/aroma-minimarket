<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="d-flex justify-content-between align-items-center card-header py-3">
      <h6 class="d-inline m-0 font-weight-bold text-primary">Products</h6>
      <a href="/admin/products/add" class="btn btn-primary btn-icon-split">
          <span class="icon text-white-50">
              <i class="fas fa-plus"></i>
          </span>
          <span class="text">Add New Product</span>
      </a>
  </div>
  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>No.</th>
                      <th>Name</th>
                      <th>Image</th>                      
                      <th>Price</th>
                      <th>Description</th>
                      <th>Action</th>                      
                  </tr>
              </thead>
              <tbody>
                <% productsData.map((items, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= items.name %></td>
                        <td>
                            <img src="<%= items.images %>" alt="Drone" style="width: 100px; height: auto;">
                        </td>
                        <td><%= items.price %></td>
                        <td><%= items.description %></td>
                        <td style="display: flex;">                            
                            <a 
                                href="/admin/products/edit/<%= items._id %>"                   
                                class="btn btn-warning btn-circle btn-sm mr-1"
                            >
                                <i class="fas fa-edit"></i>
                            </a>                            
                            <form action="/admin/products/delete/<%= items._id %>?_method=DELETE" method="post">
                                <button 
                                    type="submit"                    
                                    class="btn btn-danger btn-circle btn-sm"
                                >
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
              </tbody>
          </table>
      </div>
  </div>
</div>